@model AlmaCMS.ViewModels.VMNews
@using AlmaCMS.Helpers

    @{
        ViewBag.Title = "حذف خبر";
        Layout = "~/Areas/Manage/Views/Shared/_LayoutAdmin.cshtml";
    }

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <h4 class="panel-title">حذف خبر</h4>
                    <ul class="panel-tool-options">
                        <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                        <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                        <li><a href="/Manage/ManageNews/Index/@Model.NewsGroupID"><i class="icon-left"></i></a></li>
                        <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                    </ul>
                </div>
                <div class="panel-body">

                    <h3 class="text-danger">آیا مطمئن هستید که می خواهید این خبر را حذف کنید؟</h3>
                    <div>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Title)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Title)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.DateInsert)
                            </dt>

                            <dd>
                                @Model.DateInsert.ToPersianShortDate()
                            </dd>


                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="بله ، حذف شود !" class="btn btn-danger" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
