@model AlmaCMS.Models.CustomProduct
@{

    Layout = "~/Views/Shared/_LayoutSite.cshtml";
    
    var ImageList=ViewBag.ImageList as List<AlmaCMS.Models.CustomeProsuctsImage>;
}
<div class="page-title page-title-default title-size-default title-design-centered color-scheme-light" style="background-image: url(/content/site/images/page.jpg); height:250px; width:100%">
    <div class="container">
        <header class="entry-header">
            <h1 class="entry-title"></h1>
        </header>
    </div>
</div><br />
<div class="divider">
    <div class="line red"></div>
    <span class="section">
        <span class="title">@Model.Title</span>
    </span>
    <div class="line red"></div>
</div>


<section class="speak-about-us">
    <div class="container-fluid">
        <div class="divider">
            <span class="section">
                <i class="pusn-trumpet text-red"></i>
          @Model.Title
            </span>
            <div class="line"></div>
        </div>
        <p class="body">


            <img src="@Model.Image">







        </p>
        <p class="body">


            <!--<asp:Label runat="server" ID="lblTitle1"></asp:Label>-->
            @Html.Raw(Model.PageContent)

        </p>
    </div>
</section>

<br />
<div class="divider">
    <div class="line red"></div>
    <span class="section">
        <span class="title">برای مشاهده هر عکس، بر روی آن کلیک کنید</span>
    </span>
    <div class="line red"></div>
</div>
<br />

<section class="gallery">
    <div class="owl-carousel">


        <a href="#" class="gallery-item">
            <img src="@Model.Image">
            <div class="hover">
                <i class="pusn-angle-double-left"></i>
            </div>
        </a>


        @foreach (var item in ImageList)
        {

            <a href="#" class="gallery-item">
                <img src="@item.Image">
                <div class="hover">
                    <i class="pusn-angle-double-left"></i>
                </div>
            </a>
        }

    </div>
</section>





