@model AlmaCMS.ViewModels.VMMenuItems

@{
    ViewBag.Title = "حذف منو";
    Layout = "~/Areas/Manage/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <h4 class="panel-title">حذف منو</h4>
                <ul class="panel-tool-options">
                    <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                    <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                    <li><a href="/manage/ManageMenuItems"><i class="icon-left"></i></a></li>
                    <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                </ul>
            </div>
            <div class="panel-body">
                @if (ViewBag.ErrorMessage == null)
                {
                    <h3 class="text-danger">آیا مطمئن هستید که می خواهید این منو را حذف کنید؟</h3>
                }
                
                <div>
                    <hr />
                    <dl class="dl-horizontal">


                        <dt>
                            عنوان
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Title)
                        </dd>


                        <dt>
                            توضیحات
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Comments)
                        </dd>

                        <dt>
                            لینک مستقیم
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DirectUrl)
                        </dd>




                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        if(ViewBag.ErrorMessage==null)
                        {
                            
                       
                        <div class="form-actions no-color">
                            <input type="submit" value="بله ، حذف شود !" class="btn btn-danger" />
                        </div>
                        }
                        else
                        {
                            
                                <div class=" alert alert-warning">
                                    <i class=" fa fa-warning"></i>
                                    <span>
                                        @ViewBag.ErrorMessage
                                    </span>
                                </div>
                           
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
