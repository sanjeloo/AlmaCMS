@model IEnumerable<AlmaCMS.ViewModels.VMSlider>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_LayoutAdmin.cshtml";
}

@section styles{
    <link href="~/Areas/AdminShop/Content/plugins/datatables/css/jquery.dataTables.css" rel="stylesheet" />
    <link href="~/Areas/AdminShop/Content/plugins/datatables/extensions/Buttons/css/buttons.dataTables.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <h4 class="panel-title">مدیریت اسلایدر</h4>
                <ul class="panel-tool-options">
                    <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                    <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                    <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                </ul>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-12">
                        <a href='@Url.Action("Create", "ManageSlider")' class="btn btn-primary btn-add">
                            <i class="fa fa-plus"></i>
                            ثبت اسلایدر جدید
                        </a>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>ردیف</th>
                                <th>تصویر</th>
                                <th>عنوان</th>
                                <th>توضیحات</th>
                                <th>وضعیت</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int i = 0; }
                            @foreach (var item in Model)
                            {
                                i++;
                                <tr>
                                    <td class="size-40 text-center">
                                        @i
                                    </td>
                                    <td>
                                        <img src="@item.Image" height="40" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td class="size-80 text-center">
                                        @if (item.Active == true)
                                        {
                                            <i class="icon-check icon-larger green-color" title="فعال"></i>
                                        }
                                        else
                                        {
                                            <i class="icon-cancel icon-larger red-color" title="غیرفعال"></i>
                                        }
                                    </td>
                                    <td class="size-105 text-center" style="width:80px">
                                        <a href="@Url.Action("Edit", "ManageSlider", new { id = item.id })" class="btn btn-warning btn-xs" data-toggle="tooltip" data-placement="top" title="ویرایش"><i class="fa fa-edit"></i></a>
                                        <a href="@Url.Action("Delete", "ManageSlider", new { id = item.id })" class="btn btn-danger btn-xs" data-toggle="tooltip" data-placement="top" title="حذف"><i class="fa fa-close"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Areas/AdminShop/Content/plugins/datatables/js/jquery.dataTables.js"></script>
    <script src="~/Areas/AdminShop/Content/plugins/datatables/js/dataTables.bootstrap.min.js"></script>
    <script src="~/Areas/AdminShop/Content/plugins/datatables/extensions/Buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/Areas/AdminShop/Content/plugins/datatables/js/jszip.min.js"></script>
    <script src="~/Areas/AdminShop/Content/plugins/datatables/js/pdfmake.min.js"></script>
    <script src="~/Areas/AdminShop/Content/plugins/datatables/js/vfs_fonts.js"></script>
    <script src="~/Areas/AdminShop/Content/plugins/datatables/extensions/Buttons/js/buttons.html5.js"></script>
    <script src="~/Areas/AdminShop/Content/plugins/datatables/extensions/Buttons/js/buttons.colVis.js"></script>
    <script src="~/Areas/AdminShop/Content/plugins/datatables/js/dataTables-script.js"></script>
}