                    </h5>
                    <p class="form-message mb-2">
                        برای تماس با ما اعلام درخواست و بیان نظرات، پیشنهادات و انتقادات خود از فرم زیر می توانید استفاده نمایید.
                    </p>
                    <div class="contact-form">
                        <!-- Form Begins -->
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div role="form" name="contactform" id="contactform" novalidate="novalidate" class="bv-form">
                                <button type="submit" class="bv-hidden-submit" style="display: none; width: 0px; height: 0px;"></button>
                                <!-- Field 1 -->
                                <div class="input-text form-group">

                                    @Html.TextBoxFor(c => c.Name, new { @class = "input-name form-control", @minlength = "2", @placeholder = "نام و نام خانوادگی" })
                                    @Html.ValidationMessageFor(c => c.Name)
                                </div>
                                <!-- Field 2 -->
                                <div class="input-text form-group">

                                    @Html.TextBoxFor(c => c.Subject, new { @class = "input-name form-control", @minlength = "2", @placeholder = "نام شرکت / موسسه" })
                                    @Html.ValidationMessageFor(c => c.Subject)
                                </div>
                                <!-- Field 3 -->
                                <div class="input-email form-group">

                                    @Html.TextBoxFor(c => c.Email, new { @class = "input-name form-control", @minlength = "2", @placeholder = "ایمیل" })
                                    @Html.ValidationMessageFor(c => c.Email)
                                </div>

                                <!-- Field 4 -->
                                <div class="textarea-message form-group">

                                    @Html.TextAreaFor(c => c.Message, new { @class = "form-control textarea-message", @minlength = "2", @placeholder = "متن پیام" })
                                    @Html.ValidationMessageFor(c => c.Message)
                                </div>
                                <div class="input-email form-group">
                                    <div class="col-xs-12" style="padding-left:0;padding-right:0">
                                        <div class="col-xs-12 form-group" style="padding-left:0;padding-right:0">
                                            <span class="field-title">
                                                کد امنیتی
                                            </span>
                                            <span class="warning-hint">
                                                @ViewBag.CaptchaMsg
                                            </span>
                                            @Html.Captcha(5)
                                        </div>
                                    </div>
                                </div>
                                <!-- Button -->

                                <input id="Submit1" type="submit" value="ارسال" class="btn btn-success  col-xs-12" />
                            </div>
                        }
