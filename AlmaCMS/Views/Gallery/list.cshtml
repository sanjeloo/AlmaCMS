@{
    var albumeinfo = ViewBag.AlbumeInfo as AlmaCMS.Models.Album;
    ViewBag.Title = "گالری";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

@model List<AlmaCMS.Models.Gallery>
@using AlmaCMS.Helpers;
@{

    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
<div class="page-title page-title-default title-size-default title-design-centered color-scheme-light" style="background-image: url(/content/site/images/page.jpg); height:250px; width:100%">
    <div class="container">
        <header class="entry-header">
            <h1 class="entry-title"></h1>
        </header>
    </div>
</div><br />
<div class="divider">
    <div class="line red"></div>
    <span class="section">
        <span class="title">گالری</span>
    </span>
    <div class="line red"></div>
</div>


<section class="speak-about-us">
    <div class="container-fluid">
        <div class="divider">
            <span class="section">
                <i class="pusn-trumpet text-red"></i>
                @albumeinfo.Title
            </span>
            <div class="line"></div>
        </div>


    </div>
</section>

<br />
<div class="divider">
    <div class="line red"></div>
    <span class="section">
        <span class="title">برای مشاهده هر عکس، بر روی آن کلیک کنید</span>
    </span>
    <div class="line red"></div>
</div>
<br />

<section class="gallery">

    <div class="col-md-12 my-4">
        <div class="container">
            <div class="row">
                @foreach (var item in Model.Where(c => c.MediaType == 1))
                {

                    <div class="col-md-4">
                        <a href="#" class="gallery-item">
                            <img src="@item.FileUrl">
                            <div class="hover">
                                <i class="pusn-angle-double-left"></i>


                            </div>
                        </a>
                        <p>@item.Comments</p>
                    </div>
                }
            </div>
        </div>
    </div>






</section>
<div class="divider">
    <div class="line red"></div>
    <span class="section">
        <span class="title">گالری ویدیو</span>
    </span>
    <div class="line red"></div>
</div>
<div class="col-md-12 my-4">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Where(c => c.MediaType == 2))
            {

                <div class="col-md-4">
                    <video controls poster="@item.TumbImage" style="width:100%">
                        <source src="@item.FileUrl" type="video/mp4">

                        Your browser does not support the video tag.
                    </video>
                </div>
            }
        </div>
    </div>
</div>



