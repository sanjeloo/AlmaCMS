@model AlmaCMS.ViewModels.VMRetailers

@{
    ViewBag.Title = "ثبت نماینده جدید";
    Layout = "~/Areas/Manage/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <h4 class="panel-title">ثبت نماینده جدید</h4>
                <ul class="panel-tool-options">
                    <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                    <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                    <li><a href="/Manage/ManageRetailers"><i class="icon-left"></i></a></li>
                    <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                </ul>
            </div>
            <div class="panel-body">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.id)

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="col-md-6 col-md-offset-1">
                            <div class="form-group">
                                <div class="control-label col-md-2" style="padding:0px;">
                                    نام شرکت
                                </div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="control-label col-md-2" style="padding:0px;">
                                    نام نماینده
                                </div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="control-label col-md-2" style="padding:0px;">
                                    شماره ثابت
                                </div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Tel, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Tel, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="control-label col-md-2" style="padding:0px;">
                                    شماره موبایل
                                </div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })
                                </div>
                            </div>                            

                            <div class="form-group">
                                <div class="control-label col-md-2" style="padding:0px;">
                                    آدرس
                                </div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="control-label col-md-2" style="padding:0px;">
                                    توضیحات
                                </div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Comments, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="ثبت" class="btn btn-success btn-block" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="col-md-2">&nbsp;</div>
                            <div class="form-group col-md-10" style="border:1px solid #ccc;background-color:#ebebeb;padding:0 30px 0 0 !important;margin-right:0px;">
                                <div class="checkbox pull-left">
                                    @Html.EditorFor(model => model.ActiveState)
                                    @Html.ValidationMessageFor(model => model.ActiveState, "", new { @class = "text-danger" })
                                </div>
                                <p style="padding:5px 0;margin-bottom:4px" for="Active">وضعیت نمایش (فعال/غیرفعال)</p>
                            </div>
                            <div class="form-group">
                                <div class="control-label col-md-2" style="padding:0px;">
                                    ایمیل
                                </div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="control-label col-md-2" style="padding:0px;">
                                    وب سایت
                                </div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Website, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Website, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <hr />
                            <div class="form-group">
                                <div class="control-label col-md-2" style="padding:0px;">
                                    نام کاربری
                                </div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.USerName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.USerName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="control-label col-md-2" style="padding:0px;">
                                    رمز عبور
                                </div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Pass, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Pass, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>