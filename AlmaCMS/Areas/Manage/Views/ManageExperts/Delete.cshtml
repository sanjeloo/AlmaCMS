@model AlmaCMS.ViewModels.Expert.VMExpertInfo
@{
    ViewBag.Title = "حذف کارشناس";
    Layout = "~/Areas/Manage/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <h4 class="panel-title">حذف کارشناس</h4>
                <ul class="panel-tool-options">
                    <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                    <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                    <li><a href="/Manage/ManageExperts"><i class="icon-left"></i></a></li>
                    <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                </ul>
            </div>
            <div class="panel-body">
                <h3 class="text-danger">آیا مطمئن هستید که می خواهید این کارشناس را حذف کنید؟</h3>
                <div>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            ایمیل
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Email)
                        </dd>

                        <dt>
                            نام
                        </dt>

                        <dd>
                            <span>@Model.Name</span><span>@Model.Family</span>
                        </dd>
                        <dt>
                            موبایل
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.PhoneNumber)
                        </dd>
                        <dt>
                            عکس
                        </dt>
                        <dd>
                            @if (!string.IsNullOrEmpty(Model.Image))
                            {
                                <img src="@Model.Image" width="200" />
                            }
                            else
                            {
                                <img src="~/Content/images/noimage.gif" width="200" />
                            }

                        </dd>
                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Id)


                        <div class="form-actions no-color">
                            <input type="submit" value="بله ، حذف شود !" class="btn btn-danger" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

