@model AlmaCMS.ViewModels.VMMenuItems

@{
    ViewBag.Title = "ویرایش منو";
    Layout = "~/Areas/Manage/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <h4 class="panel-title">ویرایش منو</h4>
                <ul class="panel-tool-options">
                    <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                    <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                    <li><a href="/manage/ManageMenuItems"><i class="icon-left"></i></a></li>
                    <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                </ul>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.id)
                        <div class="col-md-7 col-md-offset-1">
                            <div class="form-group">
                                <div class="control-label col-md-2">
                                    منوی والد
                                </div>
                                <div class="col-md-10">
                                    @Html.DropDownListFor(model => model.ParentID, new SelectList(ViewBag.ParentPages, "id", "Title"), new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ParentID, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="control-label col-md-2">
                                    عنوان
                                </div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="control-label col-md-2">
                                    اولویت
                                </div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Priority, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Priority, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="control-label col-md-2">
                                    توضیحات
                                </div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Comments, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="control-label col-md-2" style="padding-right:0px;">
                                    لینک مستقیم
                                </div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.DirectUrl, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DirectUrl, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-6">
                                    <input type="submit" value="ثبت" class="btn btn-success btn-block" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group col-md-12" style="border:1px solid #ccc;background-color:#ebebeb;padding:0 30px 0 0 !important;margin-right:0px;">
                                <div class="checkbox pull-left">
                                    @Html.EditorFor(model => model.OpenInNew)
                                    @Html.ValidationMessageFor(model => model.OpenInNew, "", new { @class = "text-danger" })
                                </div>
                                <p style="padding:5px 0;margin-bottom:4px">باز شدن در صفحه جدید</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
