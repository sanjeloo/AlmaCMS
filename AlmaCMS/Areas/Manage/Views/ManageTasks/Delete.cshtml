@model AlmaCMS.Models.VWTaskList

@{
    ViewBag.Title = "حذف وظیفه";
    Layout = "~/Areas/Manage/Views/Shared/_LayoutAdmin.cshtml";
}
@helper getUsers(int taskid)
{
    AlmaCMS.Models.DB_AlmaCmsEntities db = new AlmaCMS.Models.DB_AlmaCmsEntities();
    AlmaCMS.Repositories.TasksRepository reptask = new AlmaCMS.Repositories.TasksRepository(db);
    var userList = reptask.GetDapperTaskUsers(taskid).ToList();
    foreach (var item in userList)
    {

        <span class="label label-info">
            @item.Name
        </span>
    }
}


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <h4 class="panel-title">حذف سفارش</h4>
                <ul class="panel-tool-options">
                    <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                    <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                    <li><a href="/Manage/ManageTasks"><i class="icon-left"></i></a></li>
                    <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                </ul>
            </div>
            <div class="panel-body">

                <h3 class="text-danger">آیا مطمئن هستید که می خواهید این وظیفه را حذف کنید؟</h3>
                <div>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            تاریخ ثبت 
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.persiandateinsert)
                        </dd>
                        <dt>
                            عنوان
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Title)
                        </dd>

                        <dt>
                            ملهت انجام
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.persianexpiredate)
                        </dd>
                        <dt>
                            نام کاربر
                        </dt>
                        <dd>
                            @getUsers(Model.id)
                        </dd>
                        <dt>
                            وضعیت
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.StatusTitle)
                        </dd>
                        <dt>
                            شرح وظیفه
                        </dt>
                        <dd>
                            @Html.Raw(Model.Descriptions)
                        </dd>
                       
                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="بله ، حذف شود !" class="btn btn-danger" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
