@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $('#phoneLogin').click(function () {
            $('#codeBox').val('')
            var phone = $('#userPhoneNumber').val();
            if (phone.length != 11) {
                $('#phoneError').html('شماره تلفن باید ۱۱ رقم و با صفر باشد')
                return;
            }
            else {
                $('#phoneError').html('')
            }

            $.ajax({
                url: '/Account/Phonelogin',
                method: 'post',
                data: { phoneNumber: $('#userPhoneNumber').val() },
                success: function (result) {
                    debugger;
                    if (!result.Success)
                        $('#phoneError').html(result.Message)
                    else {
                        $('#phoneLogin').attr('disabled', 'disabled')
                        $('#codeBox').removeAttr('disabled');
                        let counts = setInterval(updated, 1000);
                        let upto = 120;
                        function updated() {
                            var count = document.getElementById("counter");
                            count.innerHTML = --upto;
                            if (upto === 0) {
                                clearInterval(counts);
                                $('#phoneLogin').removeAttr('disabled')

                            }
                        }
                    }

                },
                error: function (result) {
                    console.log(result);
                }
            });


        });
        $('#sendCode').click(function () {
            debugger;
            var code = $('#codeBox').val();
            if (code.length != 5) {
                $('#codeError').html('کد وارد شده صحیح نیست')
                return;
            }
            else {
                $('#codeError').html('')
            }
            $.ajax({
                url: '/Account/VerifyPhonelogin',
                method: 'post',
                data: { phoneNumber: $('#userPhoneNumber').val(), code: $('#codeBox').val() },
                success: function (result) {
                    if (result.Success)
                        location.href = result.Url;
                    else {
                        $('#codeError').html(result.Message)
                    }
                },
                error: function (result) {
                    console.log(result);
                }
            })
        })
    </script>
}
