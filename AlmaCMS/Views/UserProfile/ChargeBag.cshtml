@model AlmaCMS.ViewModels.VMChargeBag
@{
    ViewBag.Title = "ثبت کد تحخفیف";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="tg-dashboardbanner">
    <h1>ثبت کد تحخفیف</h1>
    <ol class="tg-breadcrumb">
        <li><a href="/">صفحه اصلی</a></li>
        <li><a href="/userprofile">حساب کاربری</a></li>
        <li class="tg-active">ثبت کد تحخفیف</li>
    </ol>
</div>
<main id="tg-main" class="tg-main tg-haslayout">
    <section class="tg-dbsectionspace tg-haslayout">
        <div class="row">
            <div class="tg-formtheme tg-formdashboard">
                <fieldset>
                    <div class="col-xs-12 tg-lgcolwidthhalf">
                        <div class="tg-dashboardbox">
                            <div class="tg-dashboardboxtitle">
                                <h2>ثبت کد تحخفیف</h2>
                            </div>
                            <div class="tg-dashboardholder">
                                <div class="col-sm-4 col-sm-offset-4">
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary("", new { @class = "text-danger" })
                                        
                                        if (ViewBag.Success!=0)
                                        {
                                            <p class="alert alert-success">کد تخفیف به مبلغ @ViewBag.Success اعمال شد</p>
                                        }
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                @Html.EditorFor(m => m.DiscountCode, new { @class = "form-control", @placeholder = "کد تخفیف" })
                                            </div>
                                        </div>
                                       
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <button class="tg-btn tg-btnactionregister mt-0 btn-block" type="submit"><i class="fa fa-key"></i> اعمال کد تخفیف</button>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}