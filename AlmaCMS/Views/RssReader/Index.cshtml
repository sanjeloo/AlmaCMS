@model List<AlmaCMS.ViewModels.VMRSSReader>
@using AlmaCMS.Helpers
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="breadcrumb-box">
        <div class="container">
            <ul class="breadcrumb">
                <li>
                    <a href="/Home">صفحه اصلی</a>
                </li>
                <li class="active">خیر خوان</li>
            </ul>
        </div>
    </div>
</div>
<section class="page-section" style="padding-top: 10px;">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">

                @foreach (var item in Model)
                {

                    <div class="col-sm-6">
                        <div class="post-item">
                          @Html.ActionLink(@item.Title, "RssReader", "RssReader", new { url = item.Url, @class = "elements" }, null)
                        </div>
                    </div>

                }

            </div>
        </div>
    </div>
</section>

